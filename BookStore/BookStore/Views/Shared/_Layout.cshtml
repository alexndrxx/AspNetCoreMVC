<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/css/style.css" rel="stylesheet" />

	<environment include="Development">
		<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
	</environment>

	<environment exclude="Development">
		<link rel="stylesheet"
			  href="http://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
			  asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
			  asp-fallback-test-class="sr-only"
			  asp-fallback-test-property="position"
			  asp-fallback-test-value="absolute"
			  integrity=""
			  crossorigin="anonymous" />
	</environment>

	<title>@ViewData["Title"]</title>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" href="/">
					<img src="~/images/logo.png" width="30" height="30" asp-append-version="true" />
					BookStore
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<form class="form-inline">
						<button class="btn btn-outline-success mx-1" type="button">Login</button>
						<button class="btn btn-outline-secondary mx-1" type="button">Register</button>
					</form>
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-route="aboutUsRoute">About</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-route="contactUsRoute">Contact</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-route="AllBooksRoute">Books</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Book" asp-action="AddNewBook">Add book</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	@*@RenderSection("breadcrumb", required: false)*@

	<main role="main">
		@RenderBody()
	</main>

	<footer class="border-top footer text-muted text-center">
		<div class=container>
			Copyright &copy BookStore @DateTime.Now.Year
		</div>
	</footer>

	<script src="~/lib/jquery/jquery.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" 
			integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" 
			crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" 
			integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" 
			crossorigin="anonymous"></script>

	@RenderSection("scripts", required: false)
</body>
</html>

