@model BookModel

<div class="container display-5">
	<h3 class="display-4">Add new book</h3>
	<form method="post" asp-route="AddNewBookRoute">
		<div class="form-group">
			<label asp-for="Title"></label>
			<input asp-for="Title" type="text" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Author" class="col-form-label"></label>
			<input asp-for="Author" type="text" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			<textarea asp-for="Description" class="form-control"></textarea>
		</div>
		<div class="form-group">
			<label asp-for="TotalPages"></label>
			<input asp-for="TotalPages" type="number" class="form-control"></input>
		</div>
		<div class="form-group">
			<input type="submit" value="Add book" class="btn btn-primary"/>
		</div>
	</form>
</div>

