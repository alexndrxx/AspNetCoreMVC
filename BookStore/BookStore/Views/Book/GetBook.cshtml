@using BookStore.Models

@model BookModel
@{
	ViewData["Title"] = "GetBook";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<h3 class="display-4">Book details</h3>
	<div class="row">
		<div class="col-md-6">
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="d-block w-100" src="/images/book1.jpg" alt="First slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="/images/book2.jpg" alt="Second slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="/images/book3.jpg" alt="Third slide">
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only"></span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only"></span>
				</a>
			</div>
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12 container">
					<h1>@Model.Title</h1>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12 text-primary">
					<span class="col-form-label label-primary">By: </span>
					<span class="monospaced">AuthorName</span>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
					<p class="description">
						@Model.Description
					</p>
				</div>
			</div>

			<div class="row">
				<div class="col-md-4">
					<button class="btn btn-outline-primary">
						Read now
					</button>
				</div>
			</div>

			<div class="list-group pt-2">
				<li class="list-group-item"><span class="font-weight-bold">Category</span>Action</li>
				<li class="list-group-item"><span class="font-weight-bold">Total pages</span>12312</li>
				<li class="list-group-item"><span class="font-weight-bold">Laguage</span>Action</li>
			</div>
		</div>
	</div>
</div>
